{
	"hosting": {
		"public": "public",
		"ignore": [
			".DS_Store"
		]
	},
	"emulators": {
		"hosting": {
			"port": 3000
		},
		"auth": {
			"port": 3001
		},
		"firestore": {
			"port": 3002
		},
		"functions": {
			"port": 3003
		},
		"storage": {
			"port": 3004
		},
		"database": {
			"port": 3005
		},
		"ui": {
			"enabled": true,
			"port": 8080
		},
		"singleProjectMode": true
	},
	"database": {
		"rules": "rules/database.json"
	},
	"firestore": {
		"rules": "rules/firestore.rules",
		"indexes": "rules/firestore.index"
	},
	"functions": [
		{
			"source": "functions",
			"codebase": "default",
			"ignore": [
				"node_modules",
				".git",
				"firebase-debug.log",
				"firebase-debug.*.log"
			]
		}
	],
	"storage": {
		"rules": "rules/storage.rules"
	},
	"extensions": {}
}